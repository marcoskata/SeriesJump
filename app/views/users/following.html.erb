<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
    	<%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
<% end %>

<div class="row-fluid">
<div class="span5 offset2">
	<h1>followings</h1>
	<% current_user.followings.each do |user| %>
	<p>- <%= link_to user.name, User.find(user.idu), :controller => "users" %></p>
		<br>
	<% end %>
	</div>
</div>
