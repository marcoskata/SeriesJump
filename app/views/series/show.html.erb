<p id="notice"><%= notice %></p>

<div class="row-fluid" id="serie_show">
   <div class="span4 offset2" >
      <img id="caratula" src="<%=  @series.caratula %>" alt="Caratula Serie" height="300" width="300">
   </div>
   <div class="span4">
      	<h2><%= @series.nombre %></h2>
   	  	<h4> Sinopsis: </h4> 
   	  	<p><%= @series.sinopsis %> </p>
		<h4>Temporada:  <%= @series.temporada %> </h4> 
		<h4>Fecha: <%= @series.fecha %> </h4>
		<h4>Etiquetas: </h4> 
	    	<%= @series.etiquetas %>
		<h4>Director: </h4> 
			<%= @series.director %>
		<h4>Guionista: </h4> 
		 	<%= @series.guionista %>
		<h4>Productores:  </h4> 
			<%= @series.productores %>
      </div>
      <div class="span1 offset2">
      	<%= link_to 'Edit', edit_series_path(@series) %> |
		<%= link_to 'Back', series_index_path %>

      </div>
   </div>
   <div class="row-fluid" id="serie_comentarios">
      <div class="span4 offset2" >
         <h4>Comentarios: </h4> 
		  <%= @series.comentarios %>
   </div>
  </div>		
