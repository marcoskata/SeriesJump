<%= form_for(@pelicula) do |f| %>
  <% if @pelicula.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pelicula.errors.count, "error") %> prohibited this pelicula from being saved:</h2>

      <ul>
      <% @pelicula.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row-fluid">
	<div class="span11 offset1">
	
		<div class="field">
	    	<h4><%= f.label :nombre %> </h4>
	    	<%= f.text_field :nombre, :class => "input-xxlarge" %>
		</div>
	
	  	<div class="field">
	  	
	    	<h4><%= f.label :sinopsis %></h4>
	    	<%= f.text_field :sinopsis, :rows => 60, :class => "input-xxlarge" %>
	  	</div>
		<div class="field">
			<h4><%= f.label :saga %></h4>
		    <%= f.text_field :saga,  :class => "input-xxlarge" %>
		</div>
		<div class="field">
			<h4><%= f.label :trailers %></h4>
		    <%= f.text_field :trailers,  :class => "input-xxlarge" %>
		</div>
		<div class="field">
		   <h4> <%= f.label :fecha %></h4>
		    <%= f.date_select :fecha %>
		</div>
		<div class="field">
		    <h4><%= f.label :etiquetas %></h4>
		    <%= f.text_field :etiquetas %>
		</div>
		<div class="field">
		    <h4><%= f.label :director %></h4>
		    <%= f.text_field :director, :class => "input-xlarge" %>
		</div>
		<div class="field">
		    <h4><%= f.label :guionista %></h4>
		    <%= f.text_field :guionista, :class => "input-xlarge" %>
		</div>
		<div class="field">
		    <h4><%= f.label :productores %></h4>
		    <%= f.text_field :productores, :class => "input-xlarge" %>
		</div>
	 
		<div class="field">
		    <h4><%= f.label :caratula %></h4>
		  	<img src="<%=  @pelicula.caratula %>" alt="Caratula Pelicula" height="200" width="70" class="img-rounded">
		    <%= f.text_field :caratula, :class => "input-xxlarge" %>
		</div>
		<div class="actions">
			<br>
			<%= f.submit %>
		</div>
	</div>
</div>
<% end %>
