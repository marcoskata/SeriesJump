		                  		<h5>Idioma:</h5> <p><%= link.idioma %></p>
		                  	</div> 
		                  	<div class="span2">
		                  		<h5>Servidor:</h5> <p><%= link.servidor %></p> 
		                  	</div>
	                 	</div>
		             <% end %>
		        <% end %>
		    <% else %>	
